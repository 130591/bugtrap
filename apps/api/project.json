{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "api",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/api",
        "main": "apps/api/src/main.ts",
        "tsConfig": "apps/api/tsconfig.json",
        "assets": ["apps/api/src/assets"],
        "platform": "node",
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "production": {
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "api:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "api:build:development"
        },
        "production": {
          "buildTarget": "api:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/api/jest.config.ts"
      }
    },
    "db:migrate:identity": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node -r tsconfig-paths/register -P {projectRoot}/tsconfig.json ./node_modules/typeorm/cli.js migration:run", 
        "args": ["-d {projectRoot}/src/identity/persist/typeorm-datasource.ts"]
      },
      "outputs": []
    },
    "db:generate-migration:identity": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node -r tsconfig-paths/register -P {projectRoot}/tsconfig.json ./node_modules/typeorm/cli.js migration:generate", 
        "args": ["{projectRoot}/src/identity/persist/migrations/{args.name}", "-d {projectRoot}/src/identity/persist/typeorm-datasource.ts"]
      },
      "outputs": []
    },
    "db:revert-migration:identity": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node -r tsconfig-paths/register -P {projectRoot}/tsconfig.json ./node_modules/typeorm/cli.js migration:revert",
        "args": ["-d {projectRoot}/src/identity/persist/typeorm-datasource.ts"]
      },
      "outputs": []
    },
    "db:migrate:project": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node -r tsconfig-paths/register -P {projectRoot}/tsconfig.json ./node_modules/typeorm/cli.js migration:run",
        "args": ["-d {projectRoot}/src/project/persist/typeorm-datasource.ts"]
      },
      "outputs": []
    },
    "db:generate-migration:project": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node -r tsconfig-paths/register -P {projectRoot}/tsconfig.json ./node_modules/typeorm/cli.js migration:generate", 
        "args": ["{projectRoot}/src/project/persist/migrations/{args.name}", "-d {projectRoot}/src/project/persist/typeorm-datasource.ts"]
      },
      "outputs": []
    },
    "db:revert-migration:project": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node -r tsconfig-paths/register -P {projectRoot}/tsconfig.json ./node_modules/typeorm/cli.js migration:revert",
        "args": ["-d {projectRoot}/src/project/persist/typeorm-datasource.ts"]
      },
      "outputs": []
    }
  }
}